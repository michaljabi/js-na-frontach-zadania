{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "strict": true,
    "moduleResolution": "classic",
    "esModuleInterop": true,
    "rootDir": ".",
    "baseUrl": ".",
    "sourceMap": true,
    "allowJs": true,
    "paths": {
      "src/*": ["src/*"]
    },
    "outDir": "dist"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
}